<Window x:Class="PL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/logo.jpg"/>
        </Grid.Background>
        <Button x:Name="admin" Content="staff access" HorizontalAlignment="Left" VerticalAlignment="Top" Height="59" Width="450" Click="adminButton_Click" FontWeight="Bold" FontSize="22" RenderTransformOrigin="2.056,3.056" Margin="157,82,0,0" BorderBrush="{x:Null}" Foreground="#FFCBCBD0">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="#FFE4E5EF" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button x:Name="NewOrder" Content="new order" HorizontalAlignment="Left" Margin="202,202,0,0" VerticalAlignment="Top" Width="344" Height="73" Click="NewOrder_Click"/>
        <Button x:Name="Tracking" Content="order tracking" HorizontalAlignment="Left" Margin="200,314,0,0" VerticalAlignment="Top" Height="79" Width="346" Click="Tracking_Click"/>
    </Grid>
</Window>
